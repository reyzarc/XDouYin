<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/translucent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_home"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:src="@drawable/ic_home_bottom1" />

            <ImageView
                android:id="@+id/iv_water"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_weight="1"
                android:src="@drawable/ic_home_bottom2" />

            <ImageView
                android:id="@+id/iv_photo"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:src="@drawable/ic_home_bottom3" />

            <ImageView
                android:id="@+id/iv_fire"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:src="@drawable/ic_home_bottom4" />

            <ImageView
                android:id="@+id/iv_me"
                android:layout_width="0dp"
                android:layout_height="34dp"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:src="@drawable/ic_home_bottom5" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>



